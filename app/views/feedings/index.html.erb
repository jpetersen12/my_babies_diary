<div class="page-header">
  <h1>
    Feedings
    <a href="/feedings/new" class="btn btn-lg btn-success">New Feeding</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Infant</th>
        <th>Note</th>
        <th>Amount</th>
        <th>Date</th>
        <th>Time</th>
        <th>Actions</th>
      </tr>

      <% @feedings.each do |feeding| %>
      <tr>
        <td><%= feeding.infant_id %></td>
        <td><%= feeding.note %></td>
        <td><%= feeding.amount %></td>
        <td><%= feeding.date %></td>
        <td><%= feeding.time %></td>
        <td>
          <a href="/feedings/<%= feeding.id %>" class="btn btn-primary">Show</a>
          <a href="/feedings/<%= feeding.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_feeding/<%= feeding.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
